<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".confirm"
    android:orientation="vertical">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="Name"
            />
        <TextView
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text=""
            android:id="@+id/name2"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="Contact"/>
        <TextView
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text=""
            android:id="@+id/contact2"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="Date"/>
        <TextView
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text=""
            android:id="@+id/date2"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="Time"/>
        <TextView
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text=""
            android:id="@+id/time2"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="Bus Name"/>
        <TextView
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text=""
            android:id="@+id/bus2"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="From"/>
        <TextView
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text=""
            android:id="@+id/from2"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="Destination"/>
        <TextView
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text=""
            android:id="@+id/des2"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="No of Person"/>
        <TextView
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text=""
            android:id="@+id/nop2"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="Service"/>
        <TextView
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text=""
            android:id="@+id/ser2"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="Seat"/>
        <TextView
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text=""
            android:id="@+id/seat2"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="Email"/>
        <TextView
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text=""
            android:id="@+id/email2"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="Status"/>
        <TextView
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text=""
            android:id="@+id/status2"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="Your Fare:"/>
        <TextView
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text=""
            android:id="@+id/faretxt"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold"
            android:textSize="18dp"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_weight=".5"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Re-Write"
            android:onClick="onRewrite"
            />
        <Button
            android:layout_weight=".5"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:id="@+id/submit"
            android:onClick="onSave"
            />
    </TableRow>
</LinearLayout>
